                <button id="btn" class="btnSuaten" data-id="@item.ID" style="border:4px;padding:5px;width:50px;border-radius:10px;padding-bottom:10px;width:90px">
                    @Html.ActionLink("Sua ten", "", new { id = item.ID })
                </button>
                @*<input type="submit" class="btn btn-info btn-sm" data-tooltip-text="Cập Nhật" value="Doi ten" /><span class="tooltiptext"></span>*@
