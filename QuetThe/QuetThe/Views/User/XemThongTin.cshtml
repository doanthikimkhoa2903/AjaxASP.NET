                    @Html.ActionLink("Cat the", "", new { id = item.ID })
                </button>
            </div>
            <div>
                <button class="btnChuyenThe" data-id="@item.ID" style="border:4px;padding:5px;width:50px;border-radius:10px;padding-bottom:10px;width:90px">
